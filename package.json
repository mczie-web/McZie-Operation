{
  "name": "mczie-operation",
  "version": "0.1.0",
  "private": true,
  "description": "Operational core for agent-based execution systems",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
